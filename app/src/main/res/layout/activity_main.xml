<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="code.com.customviewstudy.MainActivity">
    <com.aries.ui.view.radius.RadiusTextView
        android:id="@+id/rv_event_dispatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="事件分发"
        android:textColor="@color/white"
        app:rv_radius="100dp"
        app:rv_backgroundColor="@color/common_color"/>
    <code.com.qqstepview.QQStepView
        android:id="@+id/qqStepView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fixed_arc_color="@color/blue"
        app:dynamic_arc_color="@color/colorAccent"
        app:step_text_color="@color/colorAccent"
        app:step_text_size="20sp"
        app:arc_border_width="6dp"/>
    <code.com.customviewstudy.widgets.SquareView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <code.com.customviewstudy.widgets.CustomView
        android:id="@+id/customView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:lineViewMarginRate="0.7"/>
</LinearLayout>
